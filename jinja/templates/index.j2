<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Resume - {{ basics.name }} </title>

  <!-- Bootstrap core CSS -->
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom fonts for this template -->
  <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet">
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="css/resume.min.css" rel="stylesheet">

</head>

<body id="page-top">

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
    <a class="navbar-brand js-scroll-trigger" href="#page-top">
      <span class="d-block d-lg-none">{{ basics.name }}</span>
      <span class="d-none d-lg-block">
        <img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="img/profile.jpg" alt="">
      </span>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">
      {% if basics %}
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="#about">About</a>
        </li>
      {% endif %}
      {% if projects %}
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#projects">Projects</a>
          </li>
      {% endif %}      
      {% if work %}
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="#experience">Experience</a>
        </li>
      {% endif %}
      {% if education %}
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="#education">Education</a>
        </li>
        {% endif %}
      {% if skills %}
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="#skills">Skills</a>
        </li>
      {% endif %}
      {% if publications %}
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="#publications">Publications</a>
        </li>
      {% endif %}
      {% if awards %}
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#awards">Awards</a>
          </li>
      {% endif %}
      {% if interests %}
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#interests">Interests</a>
          </li>
      {% endif %}
      {% if languages %}
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#languages">Languages</a>
          </li>
      {% endif %}
      </ul>
    </div>
  </nav>

  <div class="container-fluid p-0">
  {% if basics %}
    <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="about">
      <div class="w-100">
        <h1 class="mb-0"><span class="text-primary">{{ basics.name.partition(" ")[0] }}</span>  {{ " ".join(basics.name.partition(" ")[2:]) }}
        </h1>
        <div class="subheading mb-5"> {{ basics.location.address }} · {{ basics.location.city }}, {{ basics.location.region }}
        {% if basics.phone %}
        · {{ basics.phone }}
        {% endif %}
        {% if basics.email %}
        · <a href="mailto:name@email.com">{{ basics.email }} </a>
        {% endif %}
        </div>
        <p class="lead mb-5"> {{ basics.summary }} </p>
        {% if basics.profiles %}
        {% with %}
        <div class="social-icons">
          {% set social_icons = {"linkedin": "fab fa-linkedin-in", "github": "fab fa-github", "twitter": "fab fa-twitter", "facebook": "fab fa-facebook", "instagram": "fab fa-instagram",  "snapchat": "fab fa-snapchat", "angellist": "fab fa-angellist"} %}
          {% for profile in basics.profiles %}
          <a href="{{ profile.url }}" target="_blank">
            <i class="{{ social_icons.get(profile.network.lower(), "fas fa-link") }}"></i>
          </a>
          {% endfor %}
        </div>
        {% endwith %}
        {% endif %}
      </div>
    </section>
    <hr class="m-0">
    {% endif %}

  {% if projects %}
    <hr class="m-0">

    <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="projects">
      <div class="w-100">
        <h2 class="mb-5"> Projects </h2>
        <ul class="mb-0">
        {% for project in projects %}
          <li>
            <p class="lead"> <a href="{{ project.link }}" target="_blank"> {{ project.title }}</a></p>
            <p> {{ project.description }} </p>
          </li>
        {% endfor %}
        </ul>
      </div>
    </section>
  {% endif %}

    {% if work %}
    <section class="resume-section p-3 p-lg-5 d-flex justify-content-center" id="experience">
      <div class="w-100">
        <h2 class="mb-5">Experience</h2>
        {% for experience in work %}
        <div>
        <div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-5">
          <div class="resume-content">
            <h3 class="mb-0">{{ experience.position }}</h3>
            <div class="subheading mb-3">{{ experience.company }} </div>
            <p class="lead">{{ experience.summary }}</p>
          </div>
          <div class="resume-date text-md-right">
            <span class="text-primary">{{ experience.startDate|date_formatter }} - {{  experience.endDate|date_formatter if experience.endDate else "Present" }}</span>
          </div>
        </div>
        </div>
        {% endfor %}
      </div>
    </section>
    <hr class="m-0">
    {% endif %}

    {% if education %}
    <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="education">
      <div class="w-100">
        <h2 class="mb-5">Education</h2>
       {% for edu in education %}
       <div>
        <div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-5">
          <div class="resume-content">
            <h3 class="mb-0"> {{ edu.studyType }}, {{ edu.area }} </h3>
            <div class="subheading mb-3"> {{ edu.institution }} </div>
          </div>
          <div class="resume-date text-md-right">
            <span class="text-primary">{{ edu.startDate|date_formatter  }} - {{ edu.endDate|date_formatter  if edu.endDate else "Present" }}</span>
          </div>
        </div>
        </div>
        {% endfor %}
      </div>
    </section>
    {% endif %}

    {% if skills %}
    <hr class="m-0">
    <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="skills">
      <div class="w-100">
        <h2 class="mb-5">Skills</h2>

        <table class="table table-striped">
          <tbody>
            {% for skill in skills %}
            <tr>
              <th scope="row"></th>
              <td>{{ skill.name }}</td>
              <td>{{ ', '.join(skill.keywords) }} </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </section>
    {% endif %}

    {% if interests %}
    <hr class="m-0">
    <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="interests">
      <div class="w-100">
        <h2 class="mb-5">Interests</h2>

        <table class="table table-striped">
          <tbody>
            {% for interest in interests %}
            <tr>
              <th scope="row"></th>
              <td>{{ interest.name }}</td>
              <td>{{ ', '.join(interest.keywords) }} </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </section>
    {% endif %}

    {% if publications %}
    <hr class="m-0">

    <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="publications">
      <div class="w-100">
        <h2 class="mb-5"> Publications </h2>
        <ul class="mb-0">
        {% for pub in publications %}
          <li>
            <p class="lead">{{ pub.name }} </p>
          </li>
        {% endfor %}
        </ul>
      </div>
    </section>
    {% endif %}

  </div>

    {% if languages %}
    <hr class="m-0">

    <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="languages">
      <div class="w-100">
        <h2 class="mb-5"> Languages </h2>
        <ul class="mb-0">
        {% for lang in languages %}
          <li>
            <p class="lead">{{ lang.language }} </p>
          </li>
        {% endfor %}
        </ul>
      </div>
    </section>
    {% endif %}

  </div>

  </div>

    {% if awards %}
    <hr class="m-0">

    <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="awards">
      <div class="w-100">
        <h2 class="mb-5"> Awards </h2>
        <ul class="mb-0">
        {% for award in awards %}
          <li>
            <p class="lead"> {{ award.title }}, {{ award.awarder }} </p>
            <p> {{ award.summary }} </p>
          </li>
        {% endfor %}
        </ul>
      </div>
    </section>
    {% endif %}

  </div>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/resume.min.js"></script>

</body>

</html>
